{
	"bsonType": "object",
	"required": [],
	"permission": {
		"read": true,
		"create": false,
		"update": true,
		"delete": false
	},
	"properties": {
		"_id": {
			"description": "ID，系统自动生成"
		},
		"student_id": {
			"title": "学号",
			"bsonType": "string",
			"minLength": 10,
			"maxLength": 10,
			"required": true,
			"pattern": "^U[0-9]{9}",
			"validateFunction": "student_id_validation",
			"errorMessage": {
				"required": "学号必须填写",
				"minLength": "学号共10位",
				"maxLength": "学号共10位",
				"pattern": "学号格式有误"
			}
		},
		"password": {
			"title": "密码",
			"minLength": 6,
			"maxLength": 20,
			"bsonType": "password",
			"pattern": "[\\w]{6,20}",
			"required": [
				true
			],
			"permission": {
				"create":true,
				"read":true,
				"update":true
			},
			"validateFunction": "password_validation"
		},
		"nickname": {
			"title": "昵称",
			"bsonType": "string",
			"minLength": 1,
			"maxLength": 20
		},
		"birthday": {
			"title": "生日",
			"bsonType": "date"
		},
		"avatar": {
			"title": "头像",
			"bsonType": "file", // file?
			"fileMediaType": "image"
		},
		"sex": {
			"title": "性别",
			"bsonType": "string"
		},
		"real_name": {
			"title": "真实姓名",
			"bsonType": "string",
			"minLength": 2,
			"maxLength": 6
		},
		"email": {
			"title": "邮箱",
			"bsonType": "string",
			"format": "email"
		},
		"carbon_score_left": {
			"title": "碳积分余额",
			"defaultValue": 0,
			"bsonType": "int"
		},
		"carbon_score_all": {
			"title": "碳积分总数",
			"defaultValue": 0,
			"bsonType": "int"
		},
		"carbon_score_rank": {
			"title": "碳积分排名",
			"bsonType": "int"
		}
	},
	"fieldRules": [{
		"rule": "carbon_score_left <= carbon_score_all",
		"errorMessage": "碳积分余额应小于等于碳积分总数"

	}]
}
